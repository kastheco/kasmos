{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "coder": {
      "model": "anthropic/claude-sonnet-4-6",
      "permission": {
        "bash": "allow",
        "edit": "allow",
        "external_directory": {
          "*": "ask",
          "/home/kas/dev/kasmos/*": "allow",
          "/home/kas/dev/kasmos/**": "allow",
          "/tmp/*": "allow",
          "/tmp/**": "allow",
          "~/.config/opencode/*": "allow",
          "~/.config/opencode/**": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "read": "allow",
        "write": "allow"
      },
      "reasoningEffort": "medium",
      "temperature": 0.1,
      "textVerbosity": "low"
    },
    "planner": {
      "model": "anthropic/claude-opus-4-6",
      "permission": {
        "bash": "allow",
        "edit": "allow",
        "external_directory": {
          "*": "ask",
          ".kasmos/*": "allow",
          "/home/kas/dev/kasmos/*": "allow",
          "/home/kas/dev/kasmos/**": "allow",
          "/tmp/*": "allow",
          "/tmp/**": "allow",
          "~/.config/opencode/*": "allow",
          "~/.config/opencode/**": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "read": "allow",
        "write": "allow"
      },
      "reasoningEffort": "max",
      "temperature": 0.5,
      "textVerbosity": "medium"
    },
    "reviewer": {
      "model": "openai/gpt-5.3-codex",
      "permission": {
        "bash": "allow",
        "edit": {
          "*": "deny",
          "/tmp/*": "allow",
          "/tmp/**": "allow"
        },
        "external_directory": {
          "*": "ask",
          "/home/kas/dev/kasmos/*": "allow",
          "/home/kas/dev/kasmos/**": "allow",
          "/tmp/*": "allow",
          "/tmp/**": "allow"
        },
        "glob": "allow",
        "grep": "allow",
        "read": "allow",
        "write": {
          "*": "deny",
          "/tmp/*": "allow",
          "/tmp/**": "allow"
        }
      },
      "reasoningEffort": "xhigh",
      "temperature": 0.2,
      "textVerbosity": "medium"
    }
  },
  "plugin": [
    "@franlol/opencode-md-table-formatter@latest"
  ]
}
